<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Card Details Section -->
    <TextView
        android:id="@+id/text_card_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card Details"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card Number -->
    <TextView
        android:id="@+id/text_card_number_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card Number"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_card_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edit_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="XXXX XXXX XXXX XXXX"
        android:inputType="number"
        android:maxLength="19"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textColorHint="#888888"
        android:padding="12dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toBottomOf="@id/text_card_number_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_card_number_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Error message"
        android:textSize="12sp"
        android:textColor="#FF0000"
        android:visibility="gone"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/edit_card_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Expiration and CVC row -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_expiry_cvc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_card_number_error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Month Column -->
        <TextView
            android:id="@+id/text_month_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Month"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_year_label"
            app:layout_constraintHorizontal_weight="1" />

        <EditText
            android:id="@+id/edit_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="MM"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="#888888"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/edit_text_background"
            app:layout_constraintTop_toBottomOf="@id/text_month_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/edit_year"
            app:layout_constraintHorizontal_weight="1" />

        <TextView
            android:id="@+id/text_month_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Error message"
            android:textSize="12sp"
            android:textColor="#FF0000"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@id/edit_month"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_year_error"
            app:layout_constraintHorizontal_weight="1" />

        <!-- Year Column -->
        <TextView
            android:id="@+id/text_year_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Year"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_month_label"
            app:layout_constraintEnd_toStartOf="@id/text_cvc_label"
            app:layout_constraintHorizontal_weight="1" />

        <EditText
            android:id="@+id/edit_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="YY"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="#888888"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/edit_text_background"
            app:layout_constraintTop_toBottomOf="@id/text_year_label"
            app:layout_constraintStart_toEndOf="@id/edit_month"
            app:layout_constraintEnd_toStartOf="@id/edit_cvc"
            app:layout_constraintHorizontal_weight="1" />

        <TextView
            android:id="@+id/text_year_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Error message"
            android:textSize="12sp"
            android:textColor="#FF0000"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@id/edit_year"
            app:layout_constraintStart_toEndOf="@id/text_month_error"
            app:layout_constraintEnd_toStartOf="@id/text_cvc_error"
            app:layout_constraintHorizontal_weight="1" />

        <!-- CVC Column -->
        <TextView
            android:id="@+id/text_cvc_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CVC"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_year_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1" />

        <EditText
            android:id="@+id/edit_cvc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="123"
            android:inputType="numberPassword"
            android:maxLength="3"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="#888888"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/edit_text_background"
            app:layout_constraintTop_toBottomOf="@id/text_cvc_label"
            app:layout_constraintStart_toEndOf="@id/edit_year"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1" />

        <TextView
            android:id="@+id/text_cvc_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Error message"
            android:textSize="12sp"
            android:textColor="#FF0000"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@id/edit_cvc"
            app:layout_constraintStart_toEndOf="@id/text_year_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Name on Card -->
    <TextView
        android:id="@+id/text_name_on_card_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name on Card"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_expiry_cvc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edit_name_on_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="John Doe"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textColorHint="#888888"
        android:padding="12dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toBottomOf="@id/text_name_on_card_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_name_on_card_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Error message"
        android:textSize="12sp"
        android:textColor="#FF0000"
        android:visibility="gone"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/edit_name_on_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card Security Information -->
    <TextView
        android:id="@+id/text_card_security_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your card information is securely processed. We don't store your full card details on our servers."
        android:textSize="12sp"
        android:textColor="#555555"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_name_on_card_error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 